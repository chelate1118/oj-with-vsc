{
  "name": "chelate1118.oj-with",
  "displayName": "OJ-With",
  "description": "Visual Studio Code plugin supports Online Judge",
  "version": "0.0.1",
  "repository": "https://github.com/chelate1118/oj-with-vsc",
  "engines": {
    "vscode": "^1.72.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:chelate1118.oj-with.submit",
    "onCommand:chelate1118.oj-with.test",
    "onNotebook:test-case-view",
    "onLanguage:Test Case"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "Test Case",
        "aliases": ["Test Case"],
        "extensions": [
          ".test",
          ".ojw"
        ],
        "icon": {
          "light": "./resources/ojw-light.svg",
          "dark": "./resources/ojw-dark.svg"
        }
      }
    ],
    "notebooks": [
      {
        "id": "test-case-view",
        "type": "test-case-view",
        "displayName": "Test Case",
        "selector": [
          {
            "filenamePattern": "*.ojw"
          }
        ]
      }
    ],
    "commands": [
      {
        "command": "chelate1118.oj-with.submit",
        "title": "Submit Code",
        "icon": "$(check)"
      },
      {
        "command": "chelate1118.oj-with.test",
        "title": "Test Code",
        "icon": "$(run-all)"
      }
    ],
    "menus": {
      "editor/title": [
        {
          "command": "chelate1118.oj-with.submit",
          "group": "navigation"
        },
        {
          "command": "chelate1118.oj-with.test",
          "group": "navigation"
        }
      ]
    },
    "configurationDefaults": {
      "editor.semanticTokenColorCustomizations": {
        "rules": {
          "input": "#ff0000",
          "output": "#00ff00"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.72.0",
    "@types/glob": "^8.0.0",
    "@types/mocha": "^10.0.0",
    "@types/node": "16.x",
    "@typescript-eslint/eslint-plugin": "^5.38.1",
    "@typescript-eslint/parser": "^5.38.1",
    "eslint": "^8.24.0",
    "glob": "^8.0.3",
    "mocha": "^10.0.0",
    "typescript": "^4.8.4",
    "@vscode/test-electron": "^2.1.5"
  }
}
